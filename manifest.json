{
  "name": "WebSS for Figma",
  "description": "Capture full-page screenshot and split into 4096px JPGs.",
  "version": "1.2",
  "manifest_version": 3,
  "permissions": ["tabs", "activeTab"],
  "action": { "default_popup": "popup.html", "default_icon": "icons/icon16.png"},
  "icons": {
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": { "service_worker": "background.js" },
  "host_permissions": ["<all_urls>"],
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content.js"]
  }]
}
